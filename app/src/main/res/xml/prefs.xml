<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings">

        <ListPreference
            android:key="api_level"
            android:title="@string/api_level"
            android:entries="@array/api_level_entries"
            android:entryValues="@array/api_level_entry_values"
            android:defaultValue="21"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>

        <SwitchPreference
            android:key="enable_kitkat_gradient"
            android:enabled="false"
            android:title="@string/kit_kat_gradient"/>

        <SwitchPreference
            android:key="signal_wifi"
            android:title="@string/wifi_icon"/>

        <ListPreference
            android:key="signal_3g_icon"
            android:title="@string/three_g_icon"
            android:entries="@array/threeg_icon_entries"
            android:entryValues="@array/threeg_icon_values"
            android:defaultValue="-1"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>

        <com.emmaguy.cleanstatusbar.prefs.TimePreference
            android:key="clock_time"
            android:title="@string/time"/>

        <CheckBoxPreference
            android:key="use_24_hour"
            android:title="@string/use_24_hour_format"/>

        <com.emmaguy.cleanstatusbar.prefs.ColourPreference
            android:key="background_colour"
            android:title="@string/background"
            android:entries="@array/default_colour_choices"
            android:entryValues="@array/default_colour_choice_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>

    </PreferenceCategory>

</PreferenceScreen>
